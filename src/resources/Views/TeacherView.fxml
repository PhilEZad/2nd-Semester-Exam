<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>


<BorderPane fx:id="TeacherScene" stylesheets="@../Styles/MainStylesheet.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.GUI.Controllers.TeacherViewController">
   <center>
      <StackPane prefHeight="891.0" prefWidth="938.0">
            <fx:include fx:id="anchorPaneDashboard" source="dashboard/Default.fxml"/>
            <fx:include fx:id="anchorPaneStudents" source="dashboard/Students.fxml"/>
            <fx:include fx:id="anchorPaneCitizens" source="dashboard/Citizens.fxml"/>
            <fx:include fx:id="anchorPaneCitizenTemplate" source="dashboard/CitizenTemplate.fxml"/>
      </StackPane>
   </center>
   <left>
      <AnchorPane prefHeight="891.0" prefWidth="92.0" styleClass="sideMenu" BorderPane.alignment="CENTER">
         <VBox layoutX="30.0" layoutY="40.0" prefHeight="642.0" prefWidth="96.0" AnchorPane.leftAnchor="5.0"
               AnchorPane.topAnchor="30.0">
            <ToggleButton fx:id="tglBtnDashboard" mnemonicParsing="false" prefHeight="78.0" prefWidth="90.0"
                          styleClass="sideMenuToggleBtn" textAlignment="CENTER">
               <VBox.margin>
                  <Insets bottom="5.0"/>
               </VBox.margin>
               <graphic>
                  <VBox prefHeight="69.0" prefWidth="65.0">
                     <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                        <VBox.margin>
                           <Insets left="15.0"/>
                        </VBox.margin>
                        <Image url="@../img/dashboard.png"/>
                     </ImageView>
                     <Label alignment="CENTER" prefHeight="20.0" prefWidth="79.0" styleClass="smallPanelLblNormal"
                            text="Dashboard"/>
                  </VBox>
               </graphic>
            </ToggleButton>
            <ToggleButton fx:id="tglBtnStudents" mnemonicParsing="false" prefHeight="70.0" prefWidth="90.0"
                          styleClass="sideMenuToggleBtn" textAlignment="CENTER">
               <VBox.margin>
                  <Insets bottom="5.0"/>
               </VBox.margin>
               <graphic>
                  <VBox prefHeight="66.0" prefWidth="73.0">
                     <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true"
                                translateY="2.0">
                        <VBox.margin>
                           <Insets left="15.0"/>
                        </VBox.margin>
                        <Image url="@../img/students.png"/>
                     </ImageView>
                     <Label alignment="CENTER" prefHeight="20.0" prefWidth="75.0" styleClass="smallPanelLblNormal"
                            text="Elever" textAlignment="CENTER"/>
                  </VBox>
               </graphic>
            </ToggleButton>
            <ToggleButton fx:id="tglBtnCitizenTemplates" mnemonicParsing="false" prefHeight="92.0" prefWidth="90.0"
                          styleClass="sideMenuToggleBtn" textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets bottom="5.0"/>
               </VBox.margin>
               <graphic>
                  <VBox prefHeight="85.0" prefWidth="71.0">
                     <ImageView fitHeight="40.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true"
                                translateY="2.0">
                        <VBox.margin>
                           <Insets left="15.0"/>
                        </VBox.margin>
                        <Image url="@../img/citizenTemplate.png"/>
                     </ImageView>
                     <Label alignment="CENTER" prefHeight="44.0" prefWidth="90.0" styleClass="smallPanelLblNormal"
                            text="Borger Skabeloner" textAlignment="CENTER" wrapText="true">
                        <padding>
                           <Insets left="1.0"/>
                        </padding>
                     </Label>
                  </VBox>
               </graphic>
            </ToggleButton>
            <ToggleButton fx:id="tglBtnCitizens" mnemonicParsing="false" prefHeight="23.0" prefWidth="90.0"
                          styleClass="sideMenuToggleBtn" textAlignment="CENTER">
               <VBox.margin>
                  <Insets bottom="5.0"/>
               </VBox.margin>
               <graphic>
                  <VBox prefHeight="66.0" prefWidth="72.0">
                     <ImageView fitHeight="40.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
                        <VBox.margin>
                           <Insets left="16.0"/>
                        </VBox.margin>
                        <Image url="@../img/citizens.png"/>
                     </ImageView>
                     <Label alignment="CENTER" prefHeight="20.0" prefWidth="69.0" styleClass="smallPanelLblNormal"
                            text="Borgere" textAlignment="CENTER">
                        <padding>
                           <Insets left="2.0"/>
                        </padding>
                     </Label>
                  </VBox>
               </graphic>
            </ToggleButton>
         </VBox>
      </AnchorPane>
   </left>
</BorderPane>
